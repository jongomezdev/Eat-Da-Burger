<h1 class="text-center display-1 text-light">Eat Da Burger</h1>

<hr>

<div class="container">

  <div>
    <img src="assets/imgs/burger.png" alt="Burger Image">
  </div>

  <form id="create-burger">
      <div class="input-group">
        <input type="text" id="burger-name" class="validate form-control" placeholder="Create a burger!">
        <label for="burger-name"></label>
      <div class="input-group-append">
        <button class="btn" type="submit">Create</button>   
      </div>
      </div>
  </form>
{{!-- ******************** Burgers ************************ --}}
  <div class="row">
    <div class="col">
      <h2 class="text-center">Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
        <li>
          <p>{{this.id}}. {{this.burger_name}}</p>
          <button data-id="{{this.id}}" class="btn devour-btn">Devour</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
{{!-- **************** Devoured ********************* --}}
    <div class="col">
      <h2 class="text-center">Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#if this.devoured}}
        <li>
          <p>{{this.id}}. {{this.burger_name}}</p>
        </li>
        {{/if}}
        {{/each}}
      </ul>
      <div class="row">
        {{#if devoured}}
        <button id="clear-btn" class="btn devour-btn">Clear</button>
        {{/if}}
      </div>
    </div>
  </div>
</div>